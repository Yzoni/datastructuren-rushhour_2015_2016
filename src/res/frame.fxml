<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet res/styles.css?>

<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:id="root" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/8">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Open board">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="onExit" mnemonicParsing="false" text="Exit"></MenuItem>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <HBox fx:id="gridContainer" alignment="CENTER"></HBox>

        <HBox alignment="BOTTOM_CENTER">
            <Button fx:id="onPrevious" text="Previous step"></Button>
            <Button fx:id="onNext" text="Next step"></Button>
        </HBox>

    </children>
</VBox>
